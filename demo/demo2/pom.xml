<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Cross-Browser Test Suite" parallel="methods" thread-count="6">

    <!-- Chrome Tests -->
    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.example.tests.LoginTest"/>
            <class name="org.example.tests.ProductSortTest"/>
            <class name="org.example.tests.ProductPriceSortTest3"/>
            <class name="org.example.tests.ProductPriceSortTest4"/>
            <class name="org.example.tests.ProductDetailsTest"/>
            <!-- Include other test classes if needed -->
        </classes>
    </test>

    <!-- Firefox Tests -->
    <test name="Firefox Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="org.example.tests.LoginTest"/>
            <class name="org.example.tests.ProductSortTest"/>
            <class name="org.example.tests.ProductPriceSortTest3"/>
            <class name="org.example.tests.ProductPriceSortTest4"/>
            <class name="org.example.tests.ProductDetailsTest"/>
            <!-- Include other test classes if needed -->
        </classes>
    </test>

    <!-- Edge Tests -->
    <test name="Edge Test">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="org.example.tests.LoginTest"/>
            <class name="org.example.tests.ProductSortTest"/>
            <class name="org.example.tests.ProductPriceSortTest3"/>
            <class name="org.example.tests.ProductPriceSortTest4"/>
            <class name="org.example.tests.ProductDetailsTest"/>
            <!-- Include other test classes if needed -->
        </classes>
    </test>

</suite>


